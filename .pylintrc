[MASTER]
# Add files or directories to the blacklist. They should be base names, not paths.
ignore=CVS,.git,__pycache__,.pytest_cache,.mypy_cache,venv,env,figures,figures_convergence,figures_n_exp_5,figures_old,ica_figs_old

# Use multiple processes to speed up Pylint.
jobs=0

[MESSAGES CONTROL]
# Disable specific warnings that are too strict for scientific computing
disable=
    C0103,  # Invalid name (allow single-letter variables common in math)
    C0114,  # Missing module docstring
    C0115,  # Missing class docstring
    C0116,  # Missing function docstring
    R0913,  # Too many arguments
    R0914,  # Too many local variables
    R0915,  # Too many statements
    R0912,  # Too many branches
    R0917,  # Too many positional arguments
    R1702,  # Too many nested blocks
    W0212,  # Access to protected member (common in scientific code)
    W0511,  # TODO/FIXME comments
    R0801,  # Similar lines in multiple files
    C0302,  # Too many lines in module
    R0902,  # Too many instance attributes
    R0903,  # Too few public methods
    E1101,  # No member (often false positive with numpy/torch)
    W0621,  # Redefining name from outer scope
    C0411,  # Wrong import order

[FORMAT]
# Maximum number of characters on a single line.
max-line-length=120

# String used as indentation unit.
indent-string='    '

[BASIC]
# Good variable names which should always be accepted
good-names=i,j,k,n,m,x,y,z,X,Y,S,T,A,B,C,f,g,q,p,ax,df,lr,id,_

# Regular expression matching correct function names
function-rgx=[a-z_][a-z0-9_]{2,50}$

# Regular expression matching correct method names
method-rgx=[a-z_][a-z0-9_]{2,50}$

# Regular expression matching correct constant names
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$

# Regular expression matching correct class names
class-rgx=[A-Z_][a-zA-Z0-9]+$

[DESIGN]
# Maximum number of arguments for function / method
max-args=15

# Maximum number of locals for function / method body
max-locals=25

# Maximum number of return / yield for function / method body
max-returns=10

# Maximum number of branch for function / method body
max-branches=20

# Maximum number of statements in function / method body
max-statements=100

# Maximum number of attributes for a class
max-attributes=15

[SIMILARITIES]
# Minimum lines number of a similarity.
min-similarity-lines=10

# Ignore comments when computing similarities.
ignore-comments=yes

# Ignore docstrings when computing similarities.
ignore-docstrings=yes

# Ignore imports when computing similarities.
ignore-imports=yes

[TYPECHECK]
# List of members which are set dynamically and missed by pylint inference
generated-members=numpy.*,torch.*,cv2.*

# List of module names for which member attributes should not be checked
ignored-modules=numpy,torch,scipy,sklearn,matplotlib,cv2

[IMPORTS]
# Allow wildcard imports for common scientific packages
allow-wildcard-with-all=yes
